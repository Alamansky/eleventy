---
layout: page.njk
pagination:
    data: posts
    size: 1
    alias: post
permalink: "post/{{ post.slug | slug }}/"
---

<section id="post">
	<img class="margin-b" src={{post['_embedded']['wp:featuredmedia']['0'].media_details.sizes.full.source_url}}>
	<h1 class="title is-2">
		{{ post.title.rendered }} 
	</h1>
	<article class="content">
		{{ post.content.rendered | safe }}
	</article>
</section>